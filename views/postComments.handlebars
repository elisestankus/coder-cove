<div class="card my-3">
    <div class="card-header container container-fluid">
        <div class="row">
            <div class="col col-6 ">
                <h4 class="bolded">{{title}}</h7>
            </div>
            <div class="col-6 ">
                <p class="text-sm-end">Created by {{user.username}} on {{format_date date_created}}</p>
            </div>
        </div>
    </div>
    <div class="card-body">
        <p>{{content}}</p>
    </div>
</div>
{{#if logged_in}}
<div class="card my-3">
    <form class="commentForm">
        <div class="card-header">
            <div class="col-sm-10">
                <h6>Add a comment</h6>
            </div>
        </div>
        <div class="card-body">
            <div class="col-sm-10">
                <textarea type="text" class="form-control" rows="3" id="comment" placeholder="Comment"></textarea>
            </div>
        </div>
        <div class="card-footer">
            <div class="row my-1">
                <button type="submit" id="addComment" class="btn btn-lg cardBtn">Add comment</button>
            </div>
        </div>
    </form>
</div>
{{/if}}
<div class="container">
    {{#each comments as |comment|}}
    <div class="card my-3">
        <div class="card-header"></div>
        <div class="card-body">
            <p>{{comment.content}}</p>
            <p>- {{comment.user.username}}, {{format_date comment.date_created}}</p>
        </div>
    </div>
    {{/each}}
</div>