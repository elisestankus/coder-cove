<div class="card m-3">
    <form class="newPostForm">
        <div class="card-header">
            <div class="col-sm-10">
                <textarea type="text" class="form-control" rows="1" id="postTitle" placeholder="Title"></textarea>
            </div>
        </div>
        <div class="card-body">
            <div class="col-sm-10">
                <textarea type="text" class="form-control" rows="3" id="postContent"
                    placeholder="Post content"></textarea>
            </div>
        </div>
        <div class="card-footer">
            <div class="row my-1">
                <button type="submit" id="addPostBtn" class="btn btn-lg cardBtn">Create post</button>
            </div>
        </div>
    </form>
</div>